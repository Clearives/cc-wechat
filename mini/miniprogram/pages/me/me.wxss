page {
  background: #f8f8f8;
}

.userinfo {
  background: #41abfe;
  height: 200rpx;
  position: relative;
}

.userAvatarUrl {
  overflow: hidden;
  display: block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  position: absolute;
  left: 50%;
  margin-left: -70rpx;
  bottom: -70rpx;
}

.userNickName {
  display: block;
  text-align: center;
  position: relative;
  top: 280rpx;
  color: #999;
}

.detail {
  width: 90%;
  border-radius: 10rpx;
  margin: 200rpx auto 0;
  background: #fff;
}

.detail-next {
  margin-top: 20rpx;
}

.detail-list {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 15rpx 0 30rpx;
  display: flex;
  border-bottom: 1px solid #f8f8f8;
  position: relative;
}
