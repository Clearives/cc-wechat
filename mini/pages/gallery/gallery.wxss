.container {
  text-align: center;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 49.5%;
  display: block;
  height: auto;
  margin-bottom: 1%;
}

.category-item .category-item-img {
  display: block;
  width: 100%;
  height: auto;
}
.top-nav{
    white-space: nowrap;
    width: 100%;
    height: 30px;
    margin: 0 auto;
    padding: 0 2%;
    margin-bottom: 10rpx;
}

.top-btn{
    display: inline-block;
    padding: 10rpx 22rpx;
    font-size: 16px;
}

.top-btn.selected {
  color: #f60;
  border-bottom: 1px solid #f60;
}

.top-hoverd-btn{
    color: #42bd56;
    font-size: 17px;
    border-bottom: #42bd56 solid 1px;
}

